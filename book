

#include <iostream>
#include "date1.h"
#include <string>
using namespace std;

class Person
{
protected: 
	string name;
	string nationality;
	Date dob, dod;//object of the class Date
	int sex;//0=female and 1=male

public:
	Person(string n = "", int s = 0, string nat = "U.S.A") :name(n), sex(s), nationality(nat) {}
	void setdob(int m, int d, int y) { dob.setDate(m, d, y); }
	void setdod(int m, int d, int y) { dod.setDate(m, d, y); }
	void printnationality() { cout << nationality; }
	void printdob() { cout << dob; }
	void printdod() { cout << dod; }
	void printname() { cout << name; }
};
class Student : public Person
{
protected:
	string id;
	Date dom; //date of matriculation
	int credits;
	float gpa;

public:
	Student(string n, int s =0,string i=" "): Person(n,s),id(i),credits(0){}
	void setdom(int m, int d, int y) { dom.setDate(m, d, y); }
	void printdom() { cout << dom; }
	void printsex() { cout << (sex ? "male" : "female"); }

};

int main()
{
   //create object of the class
	Person author("Thomas Wonder", 1);
	author.setdob(4, 13, 1920);
	author.setdod(7, 4, 2019);
	cout << "The author of the book was ";
	author.printname();
	cout << "\n He was born on ";
	author.printdob();
	cout << "\n and died on ";
	author.printdod();
	cout << " .\n";


	Student x("Peter Pan", 0, "2194567");
	x.setdob(5, 13, 1989);
	x.setdom(6, 15, 2019);
	x.setdod(7, 5, 2019);
	x.printname();
	cout << "\n\t Born: "; x.printdob();
	cout << "\n\t matriculated: "; x.printdom;
	cout << endl;

}
